{
  "name": "Harker Hackers Schoology Extension",
  "version": "2.0",
  "description": "Schoology Schedule",
  "permissions": ["storage","webRequest","webRequestBlocking", "*://*.schoology.harker.org/*/","*://*.schoology.com/*","https://harkerca.infinitecampus.org/*/","https://www.harker.org/*/","https://saml.finalsite.com/*/"],
  "content_scripts": [
    {
	    "matches": ["https://schoology.harker.org/grades/*"],
	    "js":["chart.js"]
	  },
    {
      "matches": ["https://schoology.harker.org/*"],
      "js":["jQuery.js", "main.js"]
    },
    {
      "matches": ["https://schoology.harker.org/course/*/materials/gp/*"],
      "js": ["pdfview.js"]
    }
  ],
  "background": {
    "persistent":true,
	  "scripts": ["background.js", "pdfHeaderRemover.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/harker.png"
  },
  "manifest_version": 2
}
